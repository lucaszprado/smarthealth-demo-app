<h1> Our first Human ğŸš€</h1>
<div>
  <ul>
    <% @human_biomarkers.each do |biomarker_id, biomarker_serie| %>
      <li>
        Biomarker: <%= Biomarker.find(biomarker_id).name %>
        <ol>
          <% biomarker_serie.each do |date, value|%>
            <li> <%= date %> = <%= value %> </li>
          <% end %>
            <%= line_chart(biomarker_serie, width: "70rem", height: "30rem", colors: ["rgba(31, 128, 255, 0.2)"], library: {
              plugins: {
                title: {
                  display: true,
                  text: 'Competitions by year'
                }

              },
              scales: {
                y: {
                  beginAtZero: true,
                  title: {
                    display: true,
                    text: 'Competitions count'
                  },
                  grid: {
                    display: true
                  }
                },
                x: {
                  title: {
                    display: true,
                    text: 'Year'
                  },
                  grid: {
                    display: true
                  }
                }
              },
              elements: {
                point: {
                  radius: 5,
                  hoverRadius: 7
                }
              },



              datasets: [{
                backgroundColor: 'rgba(31, 128, 255, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 2
              }]



            }) %>
        </ol>
      </li>
    <% end %>
  </ul>
</div>

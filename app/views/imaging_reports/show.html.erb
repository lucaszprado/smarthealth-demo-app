<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-12 col-lg-9">
      <h1> <%= " #{@imaging_report[:imaging_method]} #{@imaging_report[:title][0]} #{@imaging_report[:title][1]}"%> </h1>
      <h5> Data exame: <%= stddate(@imaging_report[:date]) %> </h5>
      <div class="u-flex u-flex--justifyStart LabelsContainer mb-4">
          <fs-6 class="u-textMargin--noMargin">Sitema:</fs-6>
          <% @imaging_report[:label_system].each do |label| %>
            <fs-6 class="Label Label--<%=label_class(label)%>"> <%= label %> </fs-6>
          <% end %>
      </div>

      <div class="BoxElevated u-flex u-flex--column mb-5">
        <fs-5> Médico responsável: <%= @imaging_report[:health_professional].name %> </fs-5>
        <fs-6> Local do exame: <%= @imaging_report[:health_provider].name %> </fs-6>
      </div>

      <h3> Laudo:</h3>
      <div class="BoxElevated u-flex u-flex--column mb-4">
        <p class="u-textAlign--justify"> <%= @imaging_report[:content] %> </p>
      </div>

      <h5> Exames </h5>
      <div class="BoxElevated u-flex u-flex--column mb-4">
        <div class="table">
          Laudos originais
          <div class="laudo">
            <% @imaging_report[:report_urls].each_with_index do |url, index| %>
              <%= link_to url, class:"u-linkStdDisable" do %>
                <p class="u-textMargin--noMargin">
                  <i class="fa-solid fa-file-pdf gray-icon"></i>
                  Laudo <%= index + 1 %> de <%= @imaging_report[:report_urls].count %>
                </p>
              <% end %>
            <% end %>
          </div>
          <div class="Imagens">
            <% @imaging_report[:image_urls].each do |url| %>
              <%= link_to url do %>
              <p> <i class="fa-solid fa-file-pdf gray-icon"></i> Imagens </p>
            <% end %>
          <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

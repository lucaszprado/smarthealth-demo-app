<%= link_to link, class: "text-decoration-none link-dark" do %>
  <div class="card-justify border-bottom ps-3">
    <!-- Icon component -->
    <div>
      <i class=" <%= icon_path %> "></i>
    </div>
    <!-- Title + Label Component -->
    <div class="card-item-center">
      <!-- Title Component -->
      <p class="fs-6"> <%= title %> </p>
      <!-- Label Component -->
      <% if labels.present? %>
        <div class="flexbox-left-center">
          <% labels.each do |label| %>
            <p class="label <%= label_class(label) %>"> <%= label %></p>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Key info component + Status + Date Component -->
    <div class="flexbox-text-right">
      <div class="card-justify">
        <!-- Key info component -->
        <p class="fs-6"><%= key_info %></p>
        <!-- Status component -->
        <% if status.present? %>
          <span class="TT status TT"></span>
        <%end%>
      </div>

      <!-- Date component -->
      <div>
        <p><%= date_dd_mm_aaaa(date) %></p>
      </div>
    </div>

  </div>
<% end %>

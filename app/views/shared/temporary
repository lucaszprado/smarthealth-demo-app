    <!-- Title + Label Component -->
    <div class="card-item-center text-left">
      <!-- Title Component -->
      <p class="fs-6"> <%= TT Text || %> </p>
      <!-- Label Component -->
      <% if labels.present? %>
        <div class="">
          <% labels.each do |label| %>
            <span class="label"><%= label.name %></span>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flexbox-text-right">
      <div class="card-justify">
        <!-- Key info component -->
        <p class="fs-6"><%= "#{TT key_info TT}"  %></p>
        <% if TT status TT.present? %>
          <span class="TT status TT"></span>
        <%end%>
      </div>

      <!-- Date component -->
      <div>
        <p><%= TT Date TT %></p>
      </div>
    </div>
